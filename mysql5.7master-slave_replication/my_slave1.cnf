# For advice on how to change settings please see
# http://dev.mysql.com/doc/refman/5.7/en/server-configuration-defaults.html
# *** DO NOT EDIT THIS FILE. It's a template which will be copied to the
# *** default location during install, and will be replaced if you
# *** upgrade to a newer version of MySQL.
[mysql]
port=3306
socket=/tmp/mysql.sock
max_allowed_packet = 100M

[mysqld]

# Remove leading # and set to the amount of RAM for the most important data
# cache in MySQL. Start at 70% of total RAM for dedicated server, else 10%.
# innodb_buffer_pool_size = 128M

# Remove leading # to turn on a very important data integrity option: logging
# changes to the binary log between backups.
# log_bin

# These are commonly set, remove the # and set as required.
# basedir = .....
# datadir = .....
# port = .....
# server_id = .....
# socket = .....

# Remove leading # to set options mainly useful for reporting servers.
# The server defaults are faster for transactions and fast SELECTs.
# Adjust sizes as needed, experiment to find the optimal values.
# join_buffer_size = 128M
# sort_buffer_size = 2M
# read_rnd_buffer_size = 2M 
character-set-server = utf8
skip_name_resolve = 1
back_log = 1024
join_buffer_size = 64M
sort_buffer_size = 4M
read_rnd_buffer_size = 2M
server_id = 10002
basedir = /usr/local/services/mysql
datadir = /data/mysqldata
socket = /tmp/mysql.sock
log_bin_trust_function_creators
max_connections = 1000
max_connect_errors = 1000000
open_files_limit = 65535
table_open_cache = 1024
table_definition_cache = 1024
table_open_cache_instances = 64
thread_stack = 512k
external-locking = FALSE
max_allowed_packet = 100M
thread_cache_size = 768
binlog_cache_size = 4M
max_heap_table_size = 8M
tmp_table_size = 64M
max_heap_table_size = 64M
key_buffer_size = 128M
read_buffer_size = 8M
query_cache_type = 1
query_cache_size = 32M
query_cache_limit = 2M
ft_min_word_len = 4
log_bin = mysql-bin
binlog_format = row
expire_logs_days = 7
log_error = /data/mysqldata/error.log
slow_query_log = 1
long_query_time = 0.1
slow_query_log_file = /data/mysqldata/mysql-slow.log
general_log=ON
general_log_file=/tmp/mysql.log
log-bin = /data/mysqldata/bin-log
max_binlog_cache_size = 2G
max_binlog_size = 1G
#master_info_repository = TABLE
#relay_log_info_repository = TABLE
sync_binlog = 1
gtid_mode = on
enforce_gtid_consistency = 1
log_slave_updates
relay_log_recovery = 1
relay-log-purge = 0
relay_log=/data/mysqldata/mysql-relay
log-slave-updates=true
sync-master-info=1

#binlog-ignore-db = mysql
#binlog-ignore-db = performance_schema
#binlog-ignore-db = information_schema
#binlog-ignore-db = sys

default_storage_engine = InnoDB
innodb_sync_spin_loops = 100
innodb_spin_wait_delay = 30
transaction_isolation = REPEATABLE-READ
innodb_file_per_table = 1
innodb_open_files = 65535
innodb_buffer_pool_size = 11469M
innodb_buffer_pool_instances = 8
innodb_buffer_pool_load_at_startup = 1
innodb_buffer_pool_dump_at_shutdown = 1

innodb_io_capacity = 4000
innodb_io_capacity_max = 8000
innodb_write_io_threads = 8
innodb_read_io_threads = 8
innodb_thread_concurrency = 0
innodb_purge_threads = 4
innodb_flush_log_at_trx_commit = 1
innodb_log_buffer_size = 32M
innodb_log_file_size = 2G
innodb_log_files_in_group = 2
innodb_max_dirty_pages_pct = 90
innodb_flush_method = O_DIRECT
innodb_lru_scan_depth = 4000
innodb_checksum_algorithm = crc32
innodb_lock_wait_timeout = 10
innodb_rollback_on_timeout = 1
innodb_print_all_deadlocks = 1
innodb_online_alter_log_max_size = 4G
innodb_status_file = 1
innodb_status_output = 1
innodb_status_output_locks = 1
innodb_stats_on_metadata = 0
bulk_insert_buffer_size = 64M
myisam_sort_buffer_size = 128M
myisam_max_sort_file_size = 5G
myisam_repair_threads = 1
interactive_timeout = 600
wait_timeout = 600
explicit_defaults_for_timestamp = 1
#performance_schema
performance_schema = 1
performance_schema_instrument = '%=on'

#innodb monitor
innodb_monitor_enable="module_innodb"
innodb_monitor_enable="module_server"
innodb_monitor_enable="module_dml"
innodb_monitor_enable="module_ddl"
innodb_monitor_enable="module_trx"
innodb_monitor_enable="module_os"
innodb_monitor_enable="module_purge"
innodb_monitor_enable="module_log"
innodb_monitor_enable="module_lock"
innodb_monitor_enable="module_buffer"
innodb_monitor_enable="module_index"
innodb_monitor_enable="module_ibuf_system"
innodb_monitor_enable="module_buffer_page"
innodb_monitor_enable="module_adaptive_hash"
symbolic-links=0
sql_mode=NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES
# Semi-sync Repication
plugin-load = "rpl_semi_sync_master=semisync_master.so;rpl_semi_sync_slave=semisync_slave.so"
rpl-semi-sync-master-enabled = 1
rpl-semi-sync-slave-enabled = 1
[mysqld_safe]
log-error = /data/mysqldata/error.log
pid-file = /data/mysqldata/app2.ctys.com.pid
socket = /tmp/mysql.sock

[mysqldump]
quick
max_allowed_packet = 100M
socket = /tmp/mysql.sock

[myisamchk]
key_buffer_size = 256M
sort_buffer_size = 8M
read_buffer = 4M
write_buffer = 4M
socket = /tmp/mysql.sock 
